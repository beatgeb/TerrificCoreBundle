{# Terrific/CoreBundle/Resources/views/base.html.twig #}
<!DOCTYPE html>
<html>
<head>
    <title>{% block title %}Terrific Composer{% endblock %}</title>
    <meta name="description"
          content="{% block meta_description %}Modularize your code, scale down your problems{% endblock %}"/>
    <meta name="keywords" content="{% block meta_keywords %}Terrific Composer, TerrificJS{% endblock %}"/>
    <meta name="generator" content="Terrific Composer"/>
    <meta charset="UTF-8"/>
    {% block meta_others %}
    {% endblock %}
    {# stylesheets #}
    {% block css_reset %}
    {% stylesheets
            'bundles/terrificcore/css/cssreset-min.css'
            output="css/compiled/reset.css"
        %}
    <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
    {% endblock %}
    {% block css_default %}
    {# for general css files (ie. css resets) #}
    {% endblock %}
    {% block styles %}
    {% stylesheets
            'bundles/terrificmodule*/css/*.*'
            'bundles/terrificmodule*/css/skin/*.*'
            filter="cssrewrite"
            output="css/compiled/base.css"
        %}
    <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
    {% endblock %}
</head>
<body class="{% block body_class %}{% endblock %}">
{# the content goes here #}
    {% block composition %}{% endblock %}

{# javascripts #}
    {% block jquery %}
{% javascripts
            'bundles/terrificcore/js/jquery-1.7.1.min.js'
            output='js/compiled/jquery-1.7.1.min.js'
        %}
<script src="{{ asset_url }}" type="text/javascript"></script>
{% endjavascripts %}
{% endblock %}
{% block terrificjs %}
{% javascripts
            'bundles/terrificcore/js/terrific-1.0.0.min.js'
            output='js/compiled/terrific-1.0.0.min.js'
        %}
<script src="{{ asset_url }}" type="text/javascript"></script>
{% endjavascripts %}
{% endblock %}
{% block js_default %}
{# for general js files (ie. plugins that are needed on every page) #}
    {% endblock %}
{% block scripts %}
{% javascripts
            'bundles/terrificmodule*/js/*.js'
            'bundles/terrificmodule*/js/skin/*.js'
            output='js/compiled/base.js'
        %}
<script src="{{ asset_url }}" type="text/javascript"></script>
{% endjavascripts %}
{% endblock %}

{# terrificjs bootstrap #}
    {% block bootstrap %}
<script type="text/javascript">
    (function($) {
        $(document).ready(function() {
            var $page = $('body'),
                    application = new Tc.Application();

            application.registerModules($page);
            application.start();
        });
    })(Tc.$);
</script>
{% endblock %}
</body>
</html>